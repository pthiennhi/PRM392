<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingHorizontal="30dp"
  tools:context=".RandomGeneratorActivity">

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#DABBFF"
    android:text="True Random Number Generator"
    android:textAlignment="center"
    android:textSize="25sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.125" />

  <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginTop="48dp"
    android:gravity="center"
    android:text="Min"
    android:textSize="25sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <EditText
    android:id="@+id/editTextNumberMin"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginTop="48dp"
    android:background="@drawable/background_textbox"
    android:ems="10"
    android:gravity="center_vertical"
    android:inputType="numberSigned"
    android:paddingHorizontal="10dp"
    android:text="1"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2" />

  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginTop="32dp"
    android:gravity="center"
    android:text="Max"
    android:textSize="25sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <EditText
    android:id="@+id/editTextNumberMax"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginTop="32dp"
    android:background="@drawable/background_textbox"
    android:ems="10"
    android:gravity="center_vertical"
    android:inputType="numberSigned"
    android:paddingHorizontal="10dp"
    android:text="100"
    android:textSize="20sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editTextNumberMin" />

  <Button
    android:id="@+id/buttonGenerate"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginTop="32dp"
    android:background="@drawable/background_button"
    android:paddingHorizontal="30dp"
    android:paddingVertical="5dp"
    android:text="Generate"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView4" />

  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:text="Result:"
    android:textSize="25sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonGenerate" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DABBFF"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    app:layout_constraintTop_toBottomOf="@+id/textView"

    >

    <TextView
      android:id="@+id/result"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginVertical="2dp"
      android:textAlignment="center"
      android:textSize="0dp" />

    <TextView
      android:id="@+id/min_max"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginVertical="2dp"
      android:textSize="0dp"
      android:textAlignment="center" />

    <TextView
      android:id="@+id/time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginVertical="2dp"
      android:textSize="0dp"
      android:textAlignment="center" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>